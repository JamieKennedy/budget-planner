{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        }
    },
    "ConnectionStrings": {
        "Default": "Server=localhost;Port=5432;Database=budget-planner"
    },
    "CorsPolicy": {
        "Name": "Localhost",
        "AllowedOrigins": [
            "http://localhost:5173"
        ],
        "AllowedMethods": "*",
        "AllowedHeaders": "*",
        "AllowCredentials": true
    },
    "JwtSettings": {
        "ValidIssuer": "Test",
        "ValidAudience": "https://localhost:5173",
        "AccessTokenExpiryMinutes": 360,
        "RefreshTokenExpiryDays": 7
    }
}

